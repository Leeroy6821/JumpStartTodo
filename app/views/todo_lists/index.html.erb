


<div class="row">
  <div class="col-sm-6">
    <h1>Todo_lists</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_todo_list_path, class: 'btn btn-primary' do %>
    Add New Todo list
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Description</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @todo_lists.each do |todo_list| %>
        <%= content_tag :tr, id: dom_id(todo_list), class: dom_class(todo_list) do %>
          

                      <td><%= todo_list.title %></td>
                      <td><%= todo_list.description %></td>
          
          
            <td><%= link_to 'Show', todo_list %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
