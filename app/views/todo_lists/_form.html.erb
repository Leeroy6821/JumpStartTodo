      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
      <% todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if todo_list.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', todo_list, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if todo_list.persisted? %>
      <%= link_to "Cancel", todo_list, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", todo_lists_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
